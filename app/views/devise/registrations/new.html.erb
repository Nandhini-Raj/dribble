<html>

<h2 style="color: #B00100;padding-left: 10px;font-size: 50px;padding-left: 700px" >Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<body >
<p1 style="padding-left: 700px"><%=render 'devise/shared/error_messages' %></p1>
<style>
.btn {
  font-size: 50px;


}
</style>


  <div class="form-inputs" style=" padding-right: 200px;width:50px;padding: 5px;font-size: 20px;padding-left: 700px">
    <%= f.input :email,
                label:"Email: ",
                input_html: { autocomplete: "email" }
                 %>
    <br>
    <%= f.input :name,
                label:"Name:",
                input_html: { autocomplete: "name" } %>
    <br>
    <%= f.input :password,
                label:"Password:",
                input_html: { autocomplete: "new-password" } %>
    <br>
    <%= f.input :password_confirmation,
                label: "Confirm Password:",
                input_html: { autocomplete: "new-password" } %>
  </div>
  <br>
  <br>

  <div class="form-actions" style="padding-left: 700px" >
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>


<p style="padding-top: 30px;padding-left: 700px"> <%= render "devise/shared/links" %></p>

</body>
</html>
